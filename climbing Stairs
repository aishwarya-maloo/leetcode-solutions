class Solution {
    public int climbStairs(int n) {
        if (n == 0 || n == 1 || n == 2) return n;  // base cases

        int a = 1;  // f(1)
        int b = 2;  // f(2)
        int c = 0;

        for (int i = 3; i <= n; i++) {
            c = a + b;
            a = b;
            b = c;
        }

        return b;  // b is f(n)
    }
}
